.nav{
  width: 100%;
  height: 170rpx;
  position: fixed;
  left: 0rpx;
  top: 0rpx;
  z-index: 9999;
}
.nav-clone{
  width: 100%;
  height: 170rpx;
}
.nav .nav-bgc{
  width: 100%;
  height: 100%;
}
.nav-title{
  font-size: 40rpx;
  color: #fff;
  margin: 0 auto;
  position: absolute;
  left: 50%;
  top: 60%;
  transform: translate(-50%, -50%);
  font-weight: bold;
}
.nav-back{
  position:absolute;
  left:0%;
  top:60%;
  transform:translateY(-50%);
  width:80rpx;
  height:80rpx;
  padding:20rpx;
  box-sizing:border-box;
}
.nav-back image{
  width: 100%;
  height: 100%;
}
/* 中间内容 */
.invitation{
  width: 100%;
}
.invitation-top{
  width: 100%;
  padding-top: 50rpx;
  box-sizing: border-box;
  margin-bottom: 50rpx;
}
.invitation-top-img{
  width: 80%;
  height: 350rpx;
  text-align: center;
  margin: 0 auto;
}
.invitation-top-img image{
  width: 100%;
  height: 100%;
}
.invitation-content{
  width:80%;
  margin:0 auto;
  font-size:28rpx;
  line-height:50rpx;
}
.ic-one{
  font-size: 34rpx;
  margin-bottom: 10rpx;
}
.invitation-footer{
  width: 100%;
  margin-top: 80rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.invitation-footer-top{
  width: 100%;
  height: 80rpx;
  position: relative;
}
.if-top-line{
  width: 30%;
  height: 2rpx;
  position: absolute;
  left: 1%;
  top: 50%;
  transform: translateY(-50%);
  background-color: #c4c4c4;
}
.if-top-line-other{
  width: 30%;
  height: 2rpx;
  position: absolute;
  right: 1%;
  top: 50%;
  transform: translateY(-50%);
  background-color: #c4c4c4;
}
.if-top-text{
  font-size: 32rpx;
  color: #7a7f87;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.invitation-footer-bottom{
  width: 100%;
  text-align: center;
  position: relative;
}
.if-bottom-box{
  margin: 0 auto;
  padding-top: 10%;
  box-sizing: border-box;
}
.if-bottom-box image{
  width: 100rpx;
  height: 100rpx;
}
.if-bottom-text{
  font-size: 30rpx;
  color: #7a7f87;
}
.if-bottom-box button{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 50%;
  height: 100%;
  background-color: #fff;
  opacity: 0;
  border: none;
}
.if-bottom-box-block{
  width: 100%;
  height: 200rpx;
}