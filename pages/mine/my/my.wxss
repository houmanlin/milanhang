page{
  background-color: #f3f3f3;
}
.my-header{
  width: 100%;
  height: 320rpx;
  position: relative;
}
.my-header-bgc{
  width: 100%;
  height: 100%;
}
.my-header-box{
  position:absolute;
  left:53rpx;
  top:192rpx;
  border:2rpx solid #fc9050;
  border-radius:10rpx;
  padding:12rpx 20rpx;
  box-sizing: border-box;
  width: 86%;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  z-index: 100;
}
.header-box-author{
  width:170rpx;
  height:170rpx;
  border-radius:50%;
  margin-top:30rpx;
  margin-left:12rpx;
  margin-bottom: 20rpx;
  overflow:hidden;
}
.authorDetail-one-name{
  width: 60%;
}
.header-box-author image{
  width: 100%;
  height: 100%;
}
.header-box-authorDetail{
  padding:60rpx 0rpx 30rpx 0rpx;
  box-sizing:border-box;
  color:#ff7f0d;
  font-weight:bold;
  margin-left:30rpx;
  width:64%;
  font-size:32rpx;
}
.box-authorDetail-one{
  position: relative;
}
.authorDetail-one-img{
  position:absolute;
  right:0rpx;
  top:10rpx;
  width:120rpx;
  height:35rpx;
}
.authorDetail-one-img-other{
  position:absolute;
  right:0rpx;
  top:0rpx;
  width:80rpx;
  height:60rpx;
}
.authorDetail-one-img-other image{
  position:absolute;
  right:0rpx;
  top:0rpx;
  width:80rpx;
  height:60rpx;
}
.authorDetail-one-img image{
  width: 100%;
  height: 100%;
}
.ifMember{
  margin-top: 40rpx;
  position: relative;
}
.ifMember-time{
  font-size: 24rpx;
}
.ifMember-time-other{
  color: #9aa1a9;
}
.ifMember-btn{
  position: absolute;
  background-color: #ff7f0d;
  color: #fff;
  font-size: 24rpx;
  border-radius: 10rpx;
  padding: 5rpx 20rpx;
  right:0rpx;
  bottom:0rpx;
}
/* 中间按钮部分 */
.my-content{
  width: 86%;
  border:2rpx solid #fc9050;
  background-color: #fff;
  padding: 40rpx;
