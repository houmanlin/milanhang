  margin: 0 auto;
  margin-top: 175rpx;
  height: 655rpx;
}
.content-first{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 155rpx;
}
.content-first-one{
  width:27%;
  height:140rpx;
  text-align: center;
}
.first-one-title{
  font-size: 30rpx;
  color: #6a6d72;
  font-weight: bold;
  margin-top: 15rpx;
}
.content-first-one image{
  width: 93%;
  height: 93%;
}
.content-second{
  width: 100%;
  display: flex;
}
.content-first-other{
